FROM --platform=linux/amd64 public.ecr.aws/lambda/python:3.11

# Install system dependencies for Playwright (Amazon Linux 2023 / Python 3.11 image)
RUN dnf update -y && \
    dnf install -y \
    atk \
    cups-libs \
    gtk3 \
    libXcomposite \
    libXcursor \
    libXdamage \
    libXext \
    libXi \
    libXrandr \
    libXScrnSaver \
    libXtst \
    pango \
    at-spi2-atk \
    alsa-lib \
    xorg-x11-server-Xvfb \
    wget \
    unzip \
    ca-certificates \
    shadow-utils \
    which \
    && dnf clean all

# Copy requirements and install Python dependencies
COPY requirements_playwright.txt /var/task/requirements.txt
RUN pip install --no-cache-dir -r /var/task/requirements.txt

# Install Playwright browsers with explicit path
ENV PLAYWRIGHT_BROWSERS_PATH=/tmp/ms-playwright
RUN python -m playwright install chromium --with-deps

# Copy Lambda function and dependencies
COPY delaware_lambda_playwright.py /var/task/simple_lambda.py
COPY name_check.py /var/task/name_check.py

CMD ["simple_lambda.lambda_handler"]
