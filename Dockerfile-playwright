FROM --platform=linux/amd64 mcr.microsoft.com/playwright/python:v1.55.0-jammy

# Ensure certificates and system updated
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies (including AWS Lambda RIC)
COPY requirements_playwright.txt /var/task/requirements.txt
RUN pip install --no-cache-dir -r /var/task/requirements.txt \
    && pip install --no-cache-dir awslambdaric

# Playwright browsers already installed in this base image; ensure path for caching
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Copy Lambda function and dependencies
WORKDIR /var/task
COPY delaware_lambda_playwright.py /var/task/simple_lambda.py
COPY name_check.py /var/task/name_check.py

# Lambda runtime interface client entrypoint
CMD ["python", "-m", "awslambdaric", "simple_lambda.lambda_handler"]
